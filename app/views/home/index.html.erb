     
		 
		 
<% if signed_in? %>
	   
	<h1>最新动态</h1>

	      <%= render 'shared/feed' %>
	<h1>关注我的</h1>

	<br>
	<br>

	<%  @followers.each do |user|  %>
	      <%= user.id %>
	      <%= user.name %>
	      
	<% end %>

	<br>
	<br>


	<h1>我关注的</h1>

	<br>
	<br>

	<%  @following.each do |user|  %>
	      <%= user.id %>
	      <%= user.name %>
	      
	<% end %>

	<br>
	<br>

<% else %>

      <div class="row">
       
        <div>


          <h1 class="page-header">Dashboard</h1>

          <div class="row placeholders">
   			 <% @posts.each do |post| %>
                <div class="col-xs-6 col-sm-3 placeholder">
                <%= link_to post  do %>
                                  <%= image_tag post.avatar.url(:medium), style:"width: 200; height: 200;", class: "featurette-image img-responsive img-thumbnail" %> 
				<% end -%>
					<p class="lead">
					<ul class="list-unstyled">
						<li > 
						    <span> <h3>  <%= link_to post.title, post %></h3> @<%= link_to post.user.name , posts_path  %></span>

						</li>
						<li>
							<span class="text-muted"><%= post.text %></span>
						</li>
					</ul>

                	</p>

              </div>
	 		 <% end %>

         </div>
	</div>
<% end %>


