<h1>Listing ablums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Publish</th>
      <th>Free</th>
      <th>User</th>
      <th>Url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ablums.each do |ablum| %>
      <tr>

        <td>  <%= image_tag ablum.avatar.url , size: "100x80" %></td>

        <td><%= ablum.title %></td>
        <td><%= ablum.text %></td>
        <td><%= ablum.publish %></td>
        <td><%= ablum.free %></td>
        <td><%= ablum.user %></td>
        <td><%= ablum.url %></td>
        <td><%= link_to 'Show', ablum %></td>
        <td><%= link_to 'Edit', edit_ablum_path(ablum) %></td>
        <td><%= link_to 'Destroy', ablum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

